---
import Layout from '../../../layouts/Layout.astro';
import { readMarkdownFile } from '../../../lib/content';

const { slug } = Astro.params;
const content = readMarkdownFile(`year-10-digital-tech/assessments/${slug}.md`);
---

<Layout title={content?.title ?? 'Assessment'}>
  <main class="container">
    {content ? <article class="prose" set:html={content.html} /> : <p>Assessment not found.</p>}
  </main>
</Layout>
