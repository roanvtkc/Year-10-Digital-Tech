---
import '../styles/global.css';
import Year10Nav from '../components/Year10Nav.astro';

const { title = 'Year 10 Digital Technologies', description = 'Year 10 Digital Technologies (2026)' } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | TKC Digital Tech</title>
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <div class="brand">
          <img src="/images/tkc-crest.svg" alt="The King's College" />
          <div>
            <div class="title">Year 10 Digital Technologies</div>
            <div class="subtitle">The King's College · 2026</div>
          </div>
        </div>
        <Year10Nav />
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="container footer-grid">
        <div>
          <strong>The King's College</strong>
          <p>Year 10 Digital Technologies · 2026</p>
        </div>
        <div>
          <strong>Quick Links</strong>
          <p><a href="/year-10-digital-tech/">Overview</a></p>
          <p><a href="/year-10-digital-tech/assessments/">Assessments</a></p>
        </div>
        <div>
          <strong>References</strong>
          <p><a href="https://scsa.wa.edu.au" target="_blank" rel="noopener">SCSA</a></p>
          <p><a href="https://tkc.wa.edu.au" target="_blank" rel="noopener">School Website</a></p>
        </div>
      </div>
    </footer>
  </body>
</html>
